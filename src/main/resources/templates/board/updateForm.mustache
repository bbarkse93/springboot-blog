{{> /layout/header}}

<div class="container p-5">
    <div class="card">
        <div class="card-header"><b>글 수정 화면입니다.</b></div>
        <div class="card-body">
            <!-- 요청을 하면 localhost:8080/board/save POST로 요청됨-->
            <!-- title=제목1 & content=내용1 -->
            <form action="/board/{{board.id}}/update" method="post" enctype="application/x-www-form-urlencoded">
                <div class="mb-3">
                    <input type="text" class="form-control" placeholder="title" name="title" maxlength="100" value={{board.title}}>
                </div>
                <div class="mb-3">
                    <textarea class="form-control" rows="5" name="content">{{board.content}}</textarea>
                </div>
                <!--form태그 안의 모든 input을 한번에 전송, submit은 반드시 form태그 안에 있어야 함-->
                <button type="submit" class="btn btn-primary form-control">글수정 완료</button>
            </form>
        </div>
    </div>
    <!-- input은 value에 값이 들어오고 textarea는 태그가 닫히는 지점 바로 앞에 값이 들어간다. -->
    <!-- 즉 textarea는 value속성이 없다. -->
</div>

{{> /layout/footer}}